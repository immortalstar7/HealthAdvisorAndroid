<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Your Profile"
        android:id="@+id/textView" android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Enter Height"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/height"
        android:hint="Height"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:textSize="15dp"/>



    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Enter Weight"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/textView"
        android:textSize="15dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:id="@+id/weight"
        android:hint="Weight"
        android:textSize="15dp"
        android:layout_below="@+id/height"
        android:layout_alignLeft="@+id/height"
        android:layout_alignStart="@+id/height" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Enter Age"
        android:textColor="#000000"
        android:id="@+id/textView4"
        android:textSize="15dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:id="@+id/age"
        android:hint="Age"
        android:textSize="15dp"
        android:layout_below="@+id/weight"
        android:layout_alignRight="@+id/cancel"
        android:layout_alignEnd="@+id/cancel" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Update"
        android:id="@+id/update"
        android:textSize="13dp"
        android:layout_alignTop="@+id/cancel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Cancel"
        android:id="@+id/cancel"
        android:textSize="13dp"
        android:layout_marginTop="93dp"
        android:layout_below="@+id/weight"
        android:layout_toEndOf="@+id/update"
        android:layout_toRightOf="@+id/update" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:textColor="#000000"
        android:id="@+id/update_error"
        android:layout_below="@+id/update"
        android:layout_alignParentRight="true"/>

</RelativeLayout>

